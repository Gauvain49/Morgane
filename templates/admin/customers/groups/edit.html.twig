{% extends 'admin/base.html.twig' %}

{% block title %}Modifier un nouveau groupe de clients{% endblock %}
{% form_theme form _self %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Modifier un groupe de clients</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('customers_index') }}">
                Clients
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('customers_group') }}">
	            Groupe de clients
	        </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Modifier un groupe de clients
        </li>
    </ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-head-row">
					<h4 class="card-title">Modifier un groupe de clients</h4>
                    <div class="card-tools">
                        <a href="{{ path('customers_group_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter un groupe</a>
                    </div>
				</div>
			</div>
			<div class="card-body">
				{{ include('admin/customers/groups/_form.html.twig', {'button_label': 'Modifier'}) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
{% block _customers_group_group_discount_widget %}
    <div class="input-group" style="width: 200px">{{ form_widget(form) }}
        <div class="input-group-append">
            <span class="input-group-text">%</span>
        </div></div>
{% endblock %}
