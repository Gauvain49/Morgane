{% extends 'admin/base.html.twig' %}

{% block title %}Groupe de clients{% endblock %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Groupe de clients</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('customers_index') }}">
                Clients
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Groupe de clients
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-head-row">
                    <h4 class="card-title">Groupe de clients</h4>
                    <div class="card-tools">
                        <a href="{{ path('customers_group_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter un groupe</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Remise accordée</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for group in groups %}
                            <tr>
                                <td>{{ group.id }}</td>
                                <td>{{ group.groupName }}</td>
                                <td>{{ group.groupDiscount }} %</td>
                                <td class="d-inline-flex">
                                    <div class="p-1">
                                        <a href="{{ path('customers_group_edit', {'id': group.id}) }}" class="btn btn-primary" title="Éditer"><i class="btn-label fas fa-pen" style="font-size: 16px;"></i></a>
                                    </div>
                                    <div class="p-1">{# include('admin/customers/groups/_delete_form.html.twig') #}</div>
                                </td>
                                <td></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun groupe d'enregistré</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
