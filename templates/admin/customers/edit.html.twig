{% extends 'admin/base.html.twig' %}

{% block title %}Modifier client{% endblock %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Modifier un client</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('customers_index') }}">
                Clients
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Modifier un client
        </li>
    </ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-head-row">
					<h4 class="card-title">Modifier un client</h4>
                    <div class="card-tools">
                        <a href="{{ path('customers_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span>Ajouter un client</a>
                    </div>
				</div>
			</div>
			<div class="card-body">
				{{ include('admin/customers/_form.html.twig', {'button_label': 'Enregistrer'}) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
