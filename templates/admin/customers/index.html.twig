{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des clients{% endblock %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Gestion des clients</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Clients
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-head-row">
                    <h4 class="card-title">Gestion des clients</h4>
                    <div class="card-tools">
                        <a href="{{ path('customers_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Prénom</th>
                                <th>Nom</th>
                                <th>Email</th>
                                {#<th>Birthday</th>#}
                                <th>Ventes</th>
                                <th>Active</th>
                                <th>Inscription</th>
                                <th class="text-center">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}{{ user.customers.compagny ? '<br>Société ' ~ user.customers.compagny : '' }}</td>
                                <td>{{ user.email }}</td>
                                {#<td>{{ user.customers.birthday ? user.customers.birthday|date('Y-m-d') : '' }}</td>#}
                                <td></td>
                                <td>{{ user.active }}</td>
                                <td>{{ user.dateadd ? user.dateadd|date('d-m-Y') : '' }}</td>
                                <td class="text-center">
                                    <div class="d-inline-flex">
                                        <div class="p-1">
                                            <a href="{{ path('customers_edit', {'id': user.id}) }}" class="btn btn-primary" title="Éditer"><i class="btn-label fas fa-pen" style="font-size: 16px;"></i></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Aucun enregistrement dans la base de données</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
