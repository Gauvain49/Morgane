{% extends 'admin/base.html.twig' %}
{% block title %}
	Attribution d'auteurs
{% endblock %}
{% block body %}
<div class="page-header">
	<h4 class="page-title">Modifier un produit</h4>
	<ul class="breadcrumbs">
		<li class="nav-home">
			<a href="{{ path('dashboard') }}">
				<i class="flaticon-home"></i>
			</a>
		</li>
		<li class="separator">
			<i class="flaticon-right-arrow"></i>
		</li>
		<li class="nav-item">
			<a href="{{ path('products_index')}}">Produits</a>
		</li>
		<li class="separator">
			<i class="flaticon-right-arrow"></i>
		</li>
		<li class="nav-item">
			<a href="{{ path('products_edit', {'id': id}) }}">Modifier un produit</a>
		</li>
		<li class="separator">
			<i class="flaticon-right-arrow"></i>
		</li>
		<li class="nav-item">
			Attribution d'auteurs
		</li>
	</ul>
</div>
<div class="row">
	<div class="col-md-2">
		<div class="card">
			{% block menuProduct %}
			{{ include('admin/products/nav.html.twig') }}
			{% endblock %}
		</div>
	</div>
	<div class="col-md-10">
		<div class="card">
			<div class="card-header">
				<div class="card-head-row">
					<h4 class="card-title text-info">- {% for content in product.contents %}{% if content.lang.id == languagesService.languageDefault.id %}{{ content.name }}{% endif %}{% endfor %} -</h4>
					<div class="card-tools">
						<a href="{{ path('products_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter un produit</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				{% if authors|length > 0 %}
				{{ form_start(form) }}
				{{ form_widget(form) }}
				{{ form_end(form) }}
				{% else %}
					<p>Aucun auteur dans la base de donn√©es.</p>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('admin/js/plugin/select2/select2.full.min.js') }}"></script>
	<script>
    	$('#products_authors_authors').select2({
			theme: "bootstrap"
		});
    </script>
{% endblock %}