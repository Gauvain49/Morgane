		});
	</script>

	<!-- Attribution des checked aux catégories -->
	<script>
		var selected = ["{{ catSelected|join('", "')|raw }}"];
		var a = document.getElementsByClassName('group-categories');
		for(var i = 0; i < a.length; i++) {
			var b = a[i].value;
			var index = selected.indexOf(b);
			if(index != -1) {
				a[i].setAttribute('checked', '');
			}
		}
	</script>
{% endblock %}