<form method="post" action="{{ path('images_delete', {'id': image.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette image ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button class="btn border"><i class="btn-label fas fa-trash" title="Supprimer" style="font-size: 16px;"></i></button>
</form>
