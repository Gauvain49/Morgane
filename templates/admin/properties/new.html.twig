{% extends 'admin/base.html.twig' %}
{% block title %}Ajouter une propriété{% endblock %}
{% form_theme form _self %}

{% block stylesheets %}
<style type="text/css">
	fieldset {
		padding: 0 !important;
	}
</style>
{% endblock %}
{% block body %}
<div class="page-header">
	<h4 class="page-title">Gestion des propriétés</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Catalogue
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('properties_index') }}">
	            Propriétés
	        </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Ajouter une propriété
        </li>
    </ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Ajouter une catégorie</h4>
			</div>
			<div class="card-body">
				{% if languagesService.getLanguages|length > 1 %}
					{% set iteration = 0 %}
				<!-- champ de sélection des langues -->
				<div class="choiceLanguage contentWrapperInput">
					<button onclick="event.preventDefault(); return addDisplay(this);" class="btn btn-primary"></button>
					<select name="choiceLanguage" class="choice_language_multiple selectHidden skipThese">
						{% for lang in languagesService.getLanguages %}
						<option data-role="{{ lang.langIsoCode }}" id="id_langue_name_{{ iteration }}" value="{{ iteration }}">{{ lang.langName}}</option>
						{% set iteration = iteration + 1 %}
					{% endfor %}
					</select>
				</div>
				{% endif %}
				{{ include('admin/properties/_form.html.twig') }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
{% block _properties_properties_entry_row %}
	{{ form_widget(form) }}
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('admin/js/multilanguage.js') }}"></script>
	<script type="text/javascript">
		//Création du tableau recueillant les langues
		const listLang = new Object();
		const listLangIso = new Object();
		{% for lang in languagesService.getLanguages %}
		listLang[{{lang.id}}] = '{{lang.langName}}';
		listLangIso[{{lang.id}}] = '{{lang.langIsoCode}}';
		{% endfor %}

		//Function pour calculer la taille du tableau
		Object.size = function(arr) 
		{
		    var size = 0;
		    for (var key in arr) 
		    {
		        if (arr.hasOwnProperty(key)) size++;
		    }
		    return size;
		};
		var langLength = Object.size(listLang);

		multilanguage('properties_properties', listLang, {{ languagesService.getLanguages|length }}, {{ languagesService.languageDefault.id }});

	</script>
	<!-- Bootstrap Toggle -->
	<script src="{{ asset('admin/assets/js/plugin/bootstrap-toggle/bootstrap-toggle.min.js') }}"></script>
{% endblock %}
