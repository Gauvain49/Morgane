{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Livraison{% endblock %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Gestion des livraisons</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            E-commerce
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Livraison
        </li>
    </ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-head-row">
					<h4 class="card-title">Gestion des livraisons</h4>
					<div class="card-tools">
						<a href="{{ path('carriers_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="display table table-striped table-hover">
						<thead>
							<tr>
								<td>ID</td>
								<td>Nom</td>
								<td>Active</td>
								<td>Par défaut</td>
								<td></td>
							</tr>
						</thead>
						<tbody>
						{% for carrier in carriers %}
							<tr>
								<td>{{ carrier.id }}</td>
								<td>{{ carrier.carrierName }}</td>
								<td>{{ carrier.carrierActive ? 'Active' : 'Non active' }}</td>
								<td>{{ carrier.carrierDefault ? '' : 'Oui' }}</td>
								<td class="text-center">
                                    <div class="d-inline-flex">
                                        <div class="p-1">
                                            <a href="{{ path('carriers_edit', {'id': carrier.id}) }}" class="btn btn-primary" title="Éditer"><i class="btn-label fas fa-pen" style="font-size: 16px;"></i></a>
                                        </div>
                                        <div class="p-1">
                                            {{ include('admin/carriers/_delete_form.html.twig') }}
                                        </div>
                                    </div>
                                </td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">Aucun livreur d'enregistré dans la base de données</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}