<form method="post" action="{{ path('categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de cette ligne ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn"><i class="btn-label fas fa-trash" title="Supprimer" style="font-size: 16px;"></i></button>
</form>
