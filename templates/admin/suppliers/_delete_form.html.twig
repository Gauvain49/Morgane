<form method="post" action="{{ path('suppliers_delete', {'id': supplier.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de cette ligne ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
    <button class="btn btn-danger" style="padding-left: 19px; padding-right: 19px;"><i class="btn-label fas fa-trash" title="Supprimer"></i></button>
</form>
