<form method="post" action="{{ path('users_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger" style="padding-left: 19px; padding-right: 19px;"><i class="btn-label fas fa-trash" title="Supprimer"></i></button>
</form>