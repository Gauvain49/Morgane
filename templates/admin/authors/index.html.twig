{% extends 'admin/base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
<div class="page-header">
    <h4 class="page-title">Gestion des Auteurs</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Auteurs
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-head-row">
                    <h4 class="card-title">Gestion des auteurs</h4>
                    <div class="card-tools">
                        <a href="{{ path('authors_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter un auteur</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th data-class-name="priority">Id</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Bio</th>
                                <th>email</th>
                                <th>Image</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for author in authors %}
                            <tr>
                                <td>{{ author.id }}</td>
                                <td>{{ author.surname }}</td>
                                <td>{{ author.firstname }}</td>
                                <td>{{ author.bio }}</td>
                                <td>{{ author.email }}</td>
                                <td>
                                    {% if author.img %}
                                    <div style="max-width: 150px;">
                                        <img src="{{ asset('uploads/authors/' ~ author.id ~ '/' ~ author.img) }}" alt="" class="img-thumbnail">
                                    </div>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="d-inline-flex">
                                        <div class="p-1">
                                            <a href="{{ path('authors_edit', {'id': author.id}) }}" class="btn btn-primary" title="Éditer"><i class="btn-label fas fa-pen" style="font-size: 16px;"></i></a>
                                        </div>
                                        <div class="p-1">{{ include('admin/authors/_delete_form.html.twig') }}</div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">Aucun auteur dans la base de données</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
