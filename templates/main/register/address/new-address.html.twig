{% extends 'base.html.twig' %}

{% block title %}Renseignez vos adresses{% endblock %}
{% block stylesheets %}
<style>
	fieldset {
		border: none;
		margin-left: 15px;
	}
</style>
{% endblock %}

{% form_theme form _self %}

{% block main %}
	<div class="ht__bradcaump__area bg-image--8">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="bradcaump__inner text-center">
						<h2 class="bradcaump-title">Enregistrement de vos adresses</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
	<section class="my_account_area pt--80 pb--55 bg--white">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="my__account__wrapper">
						<h3 class="account__title">Votre adresse de {% if slug == false %}facturation{% else %}livraison{% endif %}</h3>
						<div class="creatAccount">
							{% include('main/register/address/_form.html.twig') %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
