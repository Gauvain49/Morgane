{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}
{% block introHome %}{% endblock %}
{% block stylesheets %}
<style>
	#espaceIdentification form {
		border: none;
	}
	.sr-only {
		display: none;
	}
</style>
{% endblock %}
{% form_theme form _self %}

{% block main %}
	<div class="ht__bradcaump__area bg-image--8">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="bradcaump__inner text-center">
						<h2 class="bradcaump-title">Créer votre compte</h2>
					</div>
				</div>
				{% for label, messages in app.flashes %}
					{% for message in messages %}
					<div class="alert alert-{{label}}">
						{{message}}
					</div>
					{% endfor %}
				{% endfor %}
			</div>
		</div>
	</div>
		<div id="espaceIdentification" class="clearfix">
			<div class="my_account">
				{{ include('main/register/_form.html.twig') }}
			</div>
		</div>
{% endblock %}
{# block _customers_gender_widget %}
	<div class="form-group">
		{{ form_widget(form) }}
	</div>
{% endblock #}
{# block _customers_gender_entry_widget %}
	<div class="form-check form-check-inline">
		<label for="" class="form-check-label">
			<input type="radio" name="{{ full_name }}" class="form-check-input" value="{{ value }}" required>{{ label }}
		</label>
	</div>
{% endblock #}
